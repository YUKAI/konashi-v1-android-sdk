<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <ListView
        android:id="@+id/list"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/device_list_height"
    ></ListView>
    
    <LinearLayout 
        android:id="@+id/finding"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dialog_device_list_finding_margin"
        android:layout_alignParentRight="true" >
        
        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="?android:attr/progressBarStyleSmall" />
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dialog_device_list_finding_text_margin_left"
            android:textColor="@color/dialog_device_list_finding_text"
            android:textSize="@dimen/dialog_device_list_finding_text_size"
            android:text="@string/dialog_device_list_finding_text" />
        
    </LinearLayout>
    
    <LinearLayout 
        android:id="@+id/not_found"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dialog_device_list_not_found_margin"
        android:visibility="gone" >
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/dialog_device_list_not_found"
            android:textSize="@dimen/dialog_device_list_not_found_text_size"
            android:text="@string/dialog_device_list_not_found" />
        
    </LinearLayout>
    
</RelativeLayout>
